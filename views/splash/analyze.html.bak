{{extend 'splash/layout.html'}}

<div class='subPage' id='analyze'>

    <div id='feature'>
    
        <div class='box'>
        <h2 class='letter'>1</h2>
        <p>Drag geolytic tool from sidebar to analyzer</p>
        </div>
       
        <div class='box'>
        <h2 class='letter'>2</h2>
        <p>Drag / configure paramenters into analysis</p>
        </div>
        
        <div class='box'>
        <h2 class='letter'>3</h2>
        <p>Run tool</p>
        </div>
        
    </div>   
    
    <video controls preload="none">
      <source src="{{= URL(r=request, c='static', f='videos/ps.mp4')}}"  type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'>
      <source src="{{= URL(r=request, c='static', f='videos/ps.webm')}}" type='video/webm; codecs="vp8, vorbis"'>   
      <source src="{{= URL(r=request, c='static', f='videos/ps.ogv')}}"  type='video/ogg; codecs="theora, vorbis"'>
    </video>
    
</div>
